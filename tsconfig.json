{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",        // Changed from "None" to "ES2015"
    "moduleResolution": "node", // Added back as it's needed for proper module resolution
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["chrome"]
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}